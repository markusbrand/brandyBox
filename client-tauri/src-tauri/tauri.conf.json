{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Brandy Box",
  "version": "0.2.2",
  "identifier": "rocks.brandstaetter.brandybox",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Brandy Box",
        "width": 600,
        "height": 720,
        "resizable": true,
        "visible": false,
        "label": "main",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "resources": [
      "icons/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Sync local folder to Brandy Box server",
    "longDescription": "Dropbox-like desktop app that syncs a local folder to a Raspberry Pi over Cloudflare tunnel or LAN."
  }
}
